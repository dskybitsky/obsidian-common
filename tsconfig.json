{
    "compilerOptions": {
        "outDir": "./dist",
        "baseUrl": ".",
        "inlineSources": true,
        "module": "ESNext",
        "target": "ES6",
        "allowJs": true,
        "noImplicitAny": true,
        "moduleResolution": "node",
        "importHelpers": true,
        "isolatedModules": true,
        "strictNullChecks": true,
        "declaration": true,
        "declarationMap": true,
        "lib": [
            "DOM",
            "ES5",
            "ES6",
            "ES7"
        ]
    },
    "extends": "@tsconfig/svelte/tsconfig.json",
    "include": [
        "**/globals.d.ts",
        "**/*.js",
        "**/*.svelte",
        "**/*.ts"
    ]
}
